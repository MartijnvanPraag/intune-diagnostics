# Database Configuration (SQLite by default, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./intune_diagnostics.db
# DATABASE_URL=postgresql+asyncpg://username:password@localhost/intune_diagnostics

# Azure Configuration (for DefaultAzureCredential)
# No need for client secrets - uses interactive authentication

# Optional: Azure Tenant ID (if required for your organization)
# AZURE_TENANT_ID=your-tenant-id

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# CORS Configuration (comma-separated list of allowed origins)
# For production, set to your Azure App Service URL
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# MCP Server Configuration
KUSTO_MCP_SERVER_COMMAND=kusto-mcp-server
KUSTO_MCP_SERVER_ARGS=

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO